<resources>
    <style name="SplashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Poola.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Poola.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Poola.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Poola.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Poola.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Poola.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Poola.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Poola.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Poola.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Poola.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Poola.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Poola.Overline</item>
    </style>

    <style name="SplashSignInButtonAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">#ccd72a</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="SplashSignUpButtonAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="ColoredButtonAppearance">
        <item name="android:textColor">#fbfbfb</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="NegativeColoredButtonAppearance">
        <item name="android:textColor">#fbfbfb</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="background">@color/colorNegative</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="AccentColoredButtonAppearance">
        <item name="android:textColor">#fbfbfb</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/colorPositive</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="OutlinesButtonAppearance" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="TextButtonAppearance" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="ShapeAppearance.Rounded.Corners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="InputOutline" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorNegative</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--This will be applied on the toolbar title-->
    <style name="ToolbarItemTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <!--Most screens have headline text. This will be applied on there-->
    <style name="PageHeadlineItemTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
    </style>

    <style name="SearchInputAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/colorHeader</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/hint_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="shapeAppearanceOverlay">@style/Search.Rounded.Corners</item>
    </style>

    <style name="Search.Rounded.Corners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!--This will be applied on any text described with 16sp, 24dp line height, main text color and Body1 appearance-->
    <style name="MainItemTextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!--This will be applied on any text described with 14sp, 20dp line height, sub text color and Body1 appearance-->
    <style name="SubItemTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- reference our hint & error styles -->
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="RoundedSearchAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>
