<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:layout_marginVertical="16dp"
        android:padding="24dp"
        app:srcCompat="@drawable/ic_content_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emptyTripsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No videos"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:includeFontPadding="false"
        style="@style/ToolbarItemTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading"  />

    <TextView
        android:id="@+id/emptySubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="There are no videos for Mathematics, form 1"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:includeFontPadding="false"
        style="@style/SubItemTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emptyTripsTitle"  />


</androidx.constraintlayout.widget.ConstraintLayout>